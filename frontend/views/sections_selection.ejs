<%- include("./partials/header") %>
<%- include("./navbar/menu") %>

<br>

<div class="container mt-4">
        
  <div class="row align-items-start">

      <div class="col">
          <label for="my_table"><b><i>Courses Sections</i></b></label>
          <hr class="my-4">
          <table class="table" id="tblexportData">
              <thead>
              <tr>
                  <th scope="col">Κωδ.Μαθήματος</th>
                  <th scope="col">_id</th>
                  <th scope="col">Κωδ.Καθηγητή</th>
                  <th scope="col">Κωδ.Αίθουσας</th>
                  <th scope="col">Ακαδ.Έτος</th>
                  <th scope="col">Κωδ.Εξετάσεων</th>
              </tr>
              </thead>
              <tbody>
                  <% if (typeof sections != 'undefined') { %> <% sections.forEach(section => { %>
              <tr>
                  <td><%= section.course_id %></td>
                  <td scope="row"><strong><%= section.id %></strong></td>
                  <td><%= section.professor_id %></td>
                  <td><%= section.classroom_type_id %></td>
                  <td><%= section.year %></td>
                  <td><%= section.exam_type_id %></td>
              </tr>
              <% }) %> <% } %>
              </tbody>
          </table>

          <br>
          <button type="button" class="btn btn-outline-info btn-sm" onclick="tableToCSV()">
              export CSV
          </button>
          <button type="button" class="btn btn-outline-warning btn-sm" onclick="tableToJSON()">
            export JSON
        </button>
        <button type="button" class="btn btn-outline-success btn-sm" onclick="exportToExcel('tblexportData')">
            export Excel
        </button>

      </div>           

  </div>
</div>



<%- include("./partials/footer") %>