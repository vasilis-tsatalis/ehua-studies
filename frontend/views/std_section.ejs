<%- include("./partials/header") %>
<%- include("./navbar/menu_s") %>

<br>

<div class="container mt-4">
        
  <div class="row align-items-start">

      <div class="col">
          <label for="my_table"><b><i>Sections</i></b></label>
          <hr class="my-4">
          <table class="table" id="selected_sections">
              <thead>
              <tr>
                  <th scope="col">Κωδ.Μαθήματος</th>
                  <th scope="col">_id</th>
                  <th scope="col">Κωδ.Καθηγητή</th>
                  <th scope="col">Κωδ.Αίθουσας</th>
                  <th scope="col">Ακαδ.Έτος</th>
                  <th scope="col">Κωδ.Εξετάσεων</th>
              </tr>
              </thead>
              <tbody>
                  <% if (typeof sections != 'undefined') { %> <% sections.forEach(section => { %>
              <tr>
                  <td><%= section.course_id %></td>
                  <td scope="row"><strong><%= section.id %></strong></td>
                  <td><%= section.professor_id %></td>
                  <td><%= section.classroom_type_id %></td>
                  <td><%= section.year %></td>
                  <td><%= section.exam_type_id %></td>
              </tr>
              <% }) %> <% } %>
              </tbody>
          </table>

          <br>
          <button type="button" class="btn btn-outline-info btn-sm" id="download-button-csv">
            export CSV
          </button>
          <button type="button" class="btn btn-outline-warning btn-sm" onclick="tableToJSON()">
            export JSON
        </button>
        <button type="button" class="btn btn-outline-success btn-sm" onclick="exportTableToExcel('selected_sections', 'mysections')">
            export Excel
        </button>

      </div>           

  </div>
</div>

    <script>
    document.getElementById("download-button-csv").addEventListener("click", function () {
    var html = document.querySelector("table").outerHTML;
    htmlToCSV(html, "my_sections.csv");
    });
  </script>



<%- include("./partials/footer") %>