<%- include("./partials/header") %>

<% if (role == 'professor') { %>
  <%- include("./navbar/menu_p") %>
<% } else { %>
  <%- include("./navbar/menu_s") %>
<% } %>

  <div class="list-group">

    <h2 class="border-bottom pb-2">Add Students Points</h2>
    <br>
    <br>

        <br>
        
        <div class="table-responsive">
          <table class="table table-striped table-sm" id="students_all_table">
            <thead>
              <tr>
                <th scope="col">Section ID</th>
                <th scope="col">Student ID</th>
                <th scope="col">Point</th>
                <th scope="col"> </th>
              </tr>
            </thead>
            <tbody>
              <% if (typeof section_students != 'undefined') { %> <% section_students.forEach(section_student => { %>
              <tr>
                <form class="form-inline" action="/results/points" method="post">

                  <td scope="row"><strong>
                      <input type="text" class="form-control" id="section_id" name="section_id" value="<%= section_student.section_id %>" readonly>
                  </strong></td>
                  <td>
                    <input type="text" class="form-control" id="student_id" name="student_id" value="<%= section_student.student_id %>" readonly>
                  </td>
                  <td>                
                    <div class="col-sm-6">
                        <!-- <input type="range" id="status" name="status" min="0" max="10" value="<%=section_student.points%>"> -->
                        <input type="number" id="status" name="status" min="0" max="10" step="1" value="<%=section_student.points%>">
                    </div>
                    <!-- <input type="text" class="form-control" id="point" name="point" value="<%=section_student.points%>"> -->
                    </td>
                  <td>
                    <input type="submit" value="Add result" onclick="result()">
                </td>
                </form> 
              </tr>
              <% }) %> <% } %>
            </tbody>
          </table>

    <% if (typeof message !== 'undefined' ) { %>
      <p><%= message %></p>
      <% } %>

  </div>

  <script>
    function result() {
      alert('Student point has been updated');
    }
    </script>

  <br>

  <%- include("./partials/footer") %>