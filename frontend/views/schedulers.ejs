<%- include("./partials/header") %>
<%- include("./navbar/menu") %>

<br>

<div class="container">
    <h5 class="border-bottom pb-4 mb-2">Schedulers</h5>
    <br>
    <div class="row g-2">

        <% if (typeof schedulers != 'undefined') { %> <% schedulers.forEach(scheduler => { %>

          <div class="col-4">
            <div class="p-5 border bg-dark text-success rounded-3 mb-4">
                <p><strong>Scheduler Code: </strong><i class="text-white"><%= scheduler.id %></i></p>
                <p><strong>Scheduler Name: </strong><i class="text-white"><%= scheduler.name %></i></p>
                <p><strong>Scheduler Day: </strong><i class="text-white"><%= scheduler.day %></i></p>
                <p><strong>Scheduler Start Time: </strong><i class="text-white"><%= scheduler.start_time %></i></p>
                <p><strong>Scheduler End Time: </strong><i class="text-white"><%= scheduler.end_time %></i></p>
            </div>
          </div>

      <% }) %> <% } %>

    </div>
  </div>

<br>

<%- include("./partials/footer") %>


