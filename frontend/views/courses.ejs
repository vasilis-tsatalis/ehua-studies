<%- include("./partials/header") %>
<%- include("./navbar/menu") %>

<br>

<h2 class="border-bottom">Λίστα Μαθημάτων</h2>
<br>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">Κωδικός Τμήματος</th>
        <th scope="col">_id</th>
        <th scope="col">Όνομα</th>
        <th scope="col">Περιγραφή</th>
        <th scope="col">Ενεργό</th>
        <th scope="col">Βαρύτητα</th>
      </tr>
    </thead>
    <tbody>
      <% if (typeof courses != 'undefined') { %> <% courses.forEach(course => { %>
      <tr>
          <td><%= course.department_id %></td>
          <th scope="row"><%= course.id %></th>
          <td><%= course.name %></td>
          <td><%= course.description %></td>
          <td><%= course.is_active %></td>
          <td><%= course.gravity %></td>
      </tr>
      <% }) %> <% } %>
    </tbody>
  </table>
</div>

<br>

