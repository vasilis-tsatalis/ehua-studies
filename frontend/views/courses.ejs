<%- include("./partials/header") %>

<% if (role == 'professor') { %>
  <%- include("./navbar/menu_p") %>
<% } else { %>
  <%- include("./navbar/menu_s") %>
<% } %>

<br>

<h2 class="border-bottom">Uni Courses</h2>
<br>
<div class="table-responsive">
  <table class="table table-striped table-sm" id="all_courses">
    <thead>
      <tr>
        <!-- <th scope="col">Κωδικός Τμήματος</th>
        <th scope="col">Περιγραφή τμήματος</th> -->
        <th scope="col">Course</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Active</th>
        <th scope="col">Gravity</th>
      </tr>
    </thead>
    <tbody>
      <% if (typeof courses != 'undefined') { %> <% courses.forEach(course => { %>
      <tr>
          <!-- <td<%= course.department_id %></td>
          <td<%= course.department_desc %></td> -->
          <td scope="row"><%= course.id %></td>
          <td><%= course.name %></td>
          <td><%= course.description %></td>
          <td><%= course.is_active %></td>
          <td><%= course.gravity %></td>
      </tr>
      <% }) %> <% } %>
    </tbody>
  </table>

  <br>
  <button type="button" class="btn btn-outline-info btn-sm" id="download-button-csv">
    export CSV <img src="/assets/csv.png" width="23rem" height="auto">
  </button>
  <button type="button" class="btn btn-outline-warning btn-sm" onclick="downloadObjectAsJson('all_courses','file')">
  export JSON <img src="/assets/json.png" width="23rem" height="auto">
  </button>
  <button type="button" class="btn btn-outline-success btn-sm" onclick="tableToExcel()">
  export Excel <img src="/assets/excel.png" width="23rem" height="auto">
  </button>

  <script>
    document.getElementById("download-button-csv").addEventListener("click", function () {
    var html = document.querySelector("table").outerHTML;
    htmlToCSV(html, "file.csv");
    });   
  </script>

<br>

<%- include("./partials/footer") %>