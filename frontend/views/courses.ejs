<%- include("./partials/header") %>
<%- include("./navbar/menu") %>

<br>

<h2 class="border-bottom">Λίστα Μαθημάτων</h2>
<br>
<div class="table-responsive">
  <table class="table table-striped table-sm" id="myTable">
    <thead>
      <tr>
        <th scope="col">Κωδικός Τμήματος</th>
        <th scope="col">_id</th>
        <th scope="col">Όνομα</th>
        <th scope="col">Περιγραφή</th>
        <th scope="col">Ενεργό</th>
        <th scope="col">Βαρύτητα</th>
      </tr>
    </thead>
    <tbody>
      <% if (typeof courses != 'undefined') { %> <% courses.forEach(course => { %>
      <tr>
          <td><%= course.department_id %></td>
          <td scope="row"><%= course.id %></td>
          <td><%= course.name %></td>
          <td><%= course.description %></td>
          <td><%= course.is_active %></td>
          <td><%= course.gravity %></td>
      </tr>
      <% }) %> <% } %>
    </tbody>
  </table>

  <br>
  <button type="button" class="btn btn-outline-info btn-sm" onclick="tableToCSV()">
      export CSV
  </button>
  <button type="button" class="btn btn-outline-warning btn-sm" onclick="tableToJSON('myTable')">
    export JSON
</button>

</div>

<br>

<%- include("./partials/footer") %>