<%- include("./partials/header") %>
<%- include("./navbar/menu") %>


<div class="container">
    <br>
	<div class="row justify-content-center">
		<div class="col-12 col-md-8 col-lg-12 pt-5 pb-5">

                    <!--Form with header-->

                    <form action="/contact" method="post">
                        <div class="card border-primary rounded-3">
                            <div class="card-header p-0">
                                <div class="bg-dark text-white text-center py-2">
                                    <h3><i class="fa fa-envelope"></i> Φόρμα Επικοινωνίας</h3>
                                    <p class="m-0">Αποστολή ηλεκτρονικού μηνύματος</p>
                                </div>
                            </div>
                            <div class="card-body p-3">

                                <!--Body of the form-->
                                <div class="form-group">
                                    <div class="input-group mb-2 pb-3">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fa fa-envelope text-primary"></i></div>
                                        </div>
                                        <input type="email" class="form-control" id="email" name="email" placeholder="Receiver address" required>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-group mb-2 pb-3">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fa fa-user text-primary"></i></div>
                                        </div>
                                        <input type="text" class="form-control" id="subject" name="subject" placeholder="Subject">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-group mb-2 pb-3">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fa fa-comment text-primary"></i></div>
                                        </div>
                                        <textarea class="form-control" placeholder="Text..." name="the_body" id="the_body"></textarea>
                                    </div>
                                </div>

                                <div class="text-center">
                                    <input type="submit" value="Submit" class="btn btn-dark btn-block rounded-3 py-2">
                                </div>
                            </div>

                        </div>
                    </form>
                    <!--Form with header-->


                </div>
	</div>
</div>

<%- include("./partials/footer") %>